{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'quick-add.css' | asset_url | stylesheet_tag }}

<script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div>
  <div class="page-width product-benefits-metafield__container">
    <h2 class="product-benefits-metafield__title">Recomendation product</h2>
    <ul class="grid product-grid contains-card contains-card--product">
      {% for i in (1..6) %}
        {% assign count_name = "product_" | append: i %}
        {% assign recomendation_product = product.metafields.recomendation[count_name].value %}
        {% if recomendation_product != blank %}
        <li class="grid__item">
          {% render 'card-product',
            card_product: recomendation_product,
            media_aspect_ratio: "adapt",
            image_shape: "default",
            show_secondary_image: true,
            show_vendor: true,
            show_rating: false,
            section_id: section.id,
            quick_add: "none"
          %}
        </li>
      {% endif %}
    {% endfor %}
    </ul> 
  </div>
</div>

{% schema %}
{
  "name": "Product BNF Metafield",
  "tag": "section",
  "class": "section product-benefits-metafield",
  "settings": [
    {
      "type": "paragraph",
      "content": "This section uses metafields"
    }
  ],
  "presets": [
    {
      "name": "Product BNF Metafield"
    }
  ]
}
{% endschema %}
