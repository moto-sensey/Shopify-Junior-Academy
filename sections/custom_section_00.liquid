{%- if section.blocks.size > 0 -%}
  <div class="prods-block-00">
    <div class="page-width prods-block-00__container">
          {%- for block in section.blocks -%}
            {%- if block.settings.prod_block != blank -%}
              {%- assign product = block.settings.prod_block -%}
              <div class="prods-block-00__item">
                <!-- <a href="{{ myblock.url }}" class="item__link"></a> -->
                <div class="item-content">
                  <h4 class="item-content__title">{{ product.title }}</h4>
                  {%- if product.content != blank -%}
                  <div class="item-content__text">
                    {{ product.content | truncate: 100, "..."  }}
                  </div>
                  {%- endif -%}
                  <div class="item-content__btn">
                    <button class="shop-now">Shop now!</button>
                  </div>
                </div>
                <div class="item-img">
                  {{ product.featured_image | image_url: width: 200 | image_tag: class: 'item-img__picture', alt: 'No image', loading: 'lazy'}}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
    </div>
  </div>
  {%- endif -%}
<div class="{% if section.settings.include_margins %}page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- for block in section.blocks -%}
      {% render block %}
    {%- endfor -%}
  </div>
  
  {% schema %}
  {
    "name": "My Section",
    "tag": "section",
    "class": "section",
    "settings": [
     
    ],
    "blocks": [
      {
        "type": "product",
        "name": "My Section",
        "settings": [
          {
            "type": "product",
            "id": "prod_block",
            "label": "Our product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "My Product Section"
      }
    ]
  }
  {% endschema %}
  